---
const { currentPath = Astro.url.pathname } = Astro.props;

const navItems = [
  { path: '/dashboard', label: 'Dashboard' },
  { path: '/dashboard/locales', label: 'Locales' },
  { path: '/dashboard/personal', label: 'Personal' },
  { path: '/dashboard/reviews', label: 'Reviews' }
];
---

<aside class="w-64 bg-[#2F02CC] flex flex-col fixed h-full">
  <div class="h-16 flex items-center px-4 border-b border-white/10">
    <a href="/dashboard" class="flex items-center gap-2">
      <img src="/logo.png" alt="Yuppie" class="h-8 w-8" />
      <span class="text-lg font-semibold text-white">Yuppie</span>
    </a>
  </div>

  <nav class="flex-1 p-4 space-y-1">
    {navItems.map(item => (
      <a
        href={item.path}
        class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all ${
          currentPath === item.path
            ? 'bg-white/10 text-white'
            : 'text-white/60 hover:text-white hover:bg-white/5'
        }`}
      >
        <span>{item.label}</span>
      </a>
    ))}
  </nav>
</aside>