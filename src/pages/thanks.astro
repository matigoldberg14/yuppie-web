<script>
  // Función para procesar y enviar datos de emergencia
  const processEmergencyData = async () => {
    try {
      const emergencyDataStr = localStorage.getItem('emergency_review_data');
      if (!emergencyDataStr) return;
      
      // Parsear datos de emergencia
      const data = JSON.parse(emergencyDataStr);
      console.log('Procesando datos de emergencia:', data);
      
      // Crear objeto base para API
      const apiPayload = {
        data: {
          restaurant: data.restaurantId,
          calification: data.rating,
          typeImprovement: data.typeImprovement,
          email: data.email,
          comment: data.comment,
          googleSent: data.rating === 5,
          date: new Date().toISOString(),
        }
      };
      
      // Añadir empleado si existe (usando sintaxis de objeto para evitar errores TypeScript)
      if (data.employeeId) {
        // Usar esta sintaxis para evitar problemas con TypeScript
        (apiPayload.data as any).employee = data.employeeId;
      }
      
      // Intentar enviar
      try {
        const response = await fetch(`${import.meta.env.PUBLIC_API_URL}/reviews`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(apiPayload),
        });
        
        if (response.ok) {
          console.log('Review enviada con éxito desde la página de agradecimiento');
        } else {
          console.error('Error al enviar review:', await response.text());
        }
      } catch (apiError) {
        console.error('Error en API de reviews:', apiError);
      }
    } catch (error) {
      console.error('Error procesando datos de emergencia:', error);
    } finally {
      // Limpiar TODOS los datos relacionados con reviews
      const keysToClean = [
        'emergency_review_data',
        'yuppie_improvement',
        'yuppie_rating', 
        'yuppie_restaurant',
        'yuppie_employee',
        'redirecting_from_comment'
      ];
      
      keysToClean.forEach(key => {
        try {
          localStorage.removeItem(key);
        } catch (e) {
          console.error(`Error removing ${key}:`, e);
        }
      });
    }
  };

  // Clean up any redirect flags to prevent loops
  document.addEventListener('DOMContentLoaded', () => {
    // Ejecutar el procesamiento de datos
    processEmergencyData();
  });
</script>

<style>
  .bg-gradient {
    background: linear-gradient(135deg, var(--blue-primary), var(--blue-dark));
  }
  
  .card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style>