---
// src/pages/contact.astro
import SharedLayout from '../layouts/SharedLayout.astro';
import { Card } from '../components/ui/card';
import { Button } from '../components/ui/Button';
import { Mail, MapPin, Phone, Clock, MessageSquare } from 'lucide-react';
import { ContactForm } from '../components/common/ContactForm';

const contactMethods = [
  {
    icon: Mail,
    title: "Email",
    description: "Respuesta en las 24 horas",
    value: "info@yuppiecx.com.ar",
    link: "mailto:info@yuppiecx.com.ar"
  },
  {
    icon: MessageSquare,
    title: "Ventas y Consultas",
    description: "Respuesta en las 24 horas",
    value: "Lunes a Viernes de 9:00 a 18:00",
  },
  {
    icon: MessageSquare,
    title: "Soporte",
    description: "Soporte Técnico 24/7",
    value: "soporte@yuppiecx.com.ar",
    link: "mailto:soporte@yuppiecx.com.ar"
  }
];

const faqs = [
  {
    question: "¿Cómo funciona el periodo de prueba gratuito?",
    answer: "Ofrecemos un mes completo de prueba sin cargo ni compromiso. Durante este período podrás acceder a todas las funcionalidades de la plataforma."
  },
  {
    question: "¿Necesito instalar algo en mi local?",
    answer: "No, solo necesitas los dispositivos NFC que te proporcionamos. Nuestra plataforma es 100% basada en la nube."
  },
  {
    question: "¿Puedo cancelar mi suscripción en cualquier momento?",
    answer: "Sí, puedes cancelar tu suscripción cuando lo desees sin penalizaciones. Si tienes un plan anual, podrás seguir usando el servicio hasta el final del período pagado."
  }
];
---

<SharedLayout title="Contacto | Yuppie">
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Contáctanos
          </h1>
          <p class="text-xl text-white/80">
            Estamos aquí para ayudarte. Contáctanos para una demo personalizada o cualquier consulta sobre nuestros servicios.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Methods Grid -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          {contactMethods.map(({ icon: Icon, title, description, value, link }) => (
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10 hover:border-white/20 transition-colors">
              <a href={link} class="p-6 flex flex-col items-center text-center">
                <div class="bg-white/10 p-4 rounded-full mb-4">
                  <Icon className="h-6 w-6 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
                <p class="text-white/60 mb-4">{description}</p>
                <p class="text-white font-medium">{value}</p>
              </a>
            </Card>
          ))}
        </div>

        <!-- Contact Form -->
        <div class="max-w-2xl mx-auto">
          <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
            <div class="p-8">
              <h2 class="text-2xl font-bold text-center text-white mb-8">
                Solicita una Demo
              </h2>
              <ContactForm client:load />
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-white mb-12">
            Preguntas Frecuentes
          </h2>
          <div class="space-y-6">
            {faqs.map((faq) => (
              <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-white mb-2">
                    {faq.question}
                  </h3>
                  <p class="text-white/80">
                    {faq.answer}
                  </p>
                </div>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Office Information -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-white mb-12">
            Horarios de Atención
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
              <div class="p-6">
                <div class="bg-white/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                  <Clock className="h-8 w-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-4">Soporte Técnico</h3>
                <p class="text-white/80">24/7</p>
                <p class="text-white/80">Tiempo de respuesta: 30 minutos</p>
              </div>
            </Card>
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
              <div class="p-6">
                <div class="bg-white/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                  <MessageSquare className="h-8 w-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-4">Ventas y Consultas</h3>
                <p class="text-white/80">Lunes a Viernes</p>
                <p class="text-white/80">9:00 - 18:00 hs</p>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>
  </div>
</SharedLayout>

<style>
  /* Input and select autofill styles */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    -webkit-text-fill-color: white;
    -webkit-box-shadow: 0 0 0px 1000px rgba(255, 255, 255, 0.05) inset;
    transition: background-color 5000s ease-in-out 0s;
  }

  /* Custom scrollbar for textareas */
  textarea::-webkit-scrollbar {
    width: 8px;
  }

  textarea::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  textarea::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  textarea::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>