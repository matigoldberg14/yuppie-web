---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import { Card } from '../components/ui/card';
import { Button } from '../components/ui/Button';
import { Mail, MapPin, Phone, Clock, MessageSquare } from 'lucide-react';

const contactMethods = [
  {
    icon: Mail,
    title: "Email",
    description: "Respuesta en 24 horas",
    value: "info@yuppiecx.com.ar",
    link: "mailto:info@yuppiecx.com.ar"
  },
  {
    icon: Phone,
    title: "WhatsApp",
    description: "Lunes a Viernes 9-18hs",
    value: "+54 9 11 3252-3618",
    link: "https://wa.me/5491132523618"
  },
  {
    icon: MessageSquare,
    title: "Soporte",
    description: "Soporte Técnico 24/7",
    value: "soporte@yuppiecx.com.ar",
    link: "mailto:soporte@yuppiecx.com.ar"
  }
];

const faqs = [
  {
    question: "¿Cómo funciona el periodo de prueba gratuito?",
    answer: "Ofrecemos un mes completo de prueba sin cargo ni compromiso. Durante este período podrás acceder a todas las funcionalidades de la plataforma."
  },
  {
    question: "¿Necesito instalar algo en mi local?",
    answer: "No, solo necesitas los dispositivos NFC que te proporcionamos. Nuestra plataforma es 100% basada en la nube."
  },
  {
    question: "¿Puedo cancelar mi suscripción en cualquier momento?",
    answer: "Sí, puedes cancelar tu suscripción cuando lo desees sin penalizaciones. Si tienes un plan anual, podrás seguir usando el servicio hasta el final del período pagado."
  }
];
---

<Layout title="Contacto | Yuppie">
  <div class="min-h-screen">
    <header class="px-8 lg:px-12 h-20 flex items-center bg-white border-b border-gray-200">
      <a class="flex items-center justify-center" href="/">
        <img
          src="/logo_grande.png"
          alt="Yuppie Logo"
          class="h-10 w-auto"
        />
      </a>
      <nav class="ml-auto flex gap-6 sm:gap-8">
        <a class="text-base font-medium text-primary hover:text-primary-light transition-colors" href="/">
          Inicio
        </a>
      </nav>
    </header>

    <main>
      <!-- Hero Section -->
      <section class="bg-primary py-20">
        <div class="container mx-auto px-4">
          <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
              Contáctanos
            </h1>
            <p class="text-xl text-white/80">
              Estamos aquí para ayudarte. Contáctanos para una demo personalizada o cualquier consulta sobre nuestros servicios.
            </p>
          </div>
        </div>
      </section>

      <!-- Contact Methods Grid -->
      <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            {contactMethods.map(({ icon: Icon, title, description, value, link }) => (
              <Card className="border-2 border-primary/10 hover:border-primary/20 transition-colors">
                <a href={link} class="p-6 flex flex-col items-center text-center">
                  <div class="bg-primary/10 p-4 rounded-full mb-4">
                    <Icon className="h-6 w-6 text-primary" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
                  <p class="text-gray-600 mb-4">{description}</p>
                  <p class="text-primary font-medium">{value}</p>
                </a>
              </Card>
            ))}
          </div>

          <!-- Contact Form -->
          <div class="max-w-2xl mx-auto">
            <Card className="border-2 border-primary/10">
              <div class="p-8">
                <h2 class="text-2xl font-bold text-center text-gray-900 mb-8">
                  Solicita una Demo
                </h2>
                <form class="space-y-6">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">
                        Nombre
                      </label>
                      <input
                        type="text"
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                        placeholder="Tu nombre"
                      />
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">
                        Apellido
                      </label>
                      <input
                        type="text"
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                        placeholder="Tu apellido"
                      />
                    </div>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Email
                    </label>
                    <input
                      type="email"
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                      placeholder="tu@email.com"
                    />
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Nombre del Negocio
                    </label>
                    <input
                      type="text"
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                      placeholder="Nombre de tu negocio"
                    />
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Cantidad de Locales
                    </label>
                    <select
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                    >
                      <option value="1-5">1-5 locales</option>
                      <option value="6-10">6-10 locales</option>
                      <option value="11-25">11-25 locales</option>
                      <option value="25+">Más de 25 locales</option>
                    </select>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Mensaje
                    </label>
                    <textarea
  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary/20 
         focus:border-primary transition-colors bg-white text-gray-900"
                      placeholder="¿En qué podemos ayudarte?"
                    ></textarea>
                  </div>

                  <Button
                    type="submit"
                    className="w-full bg-white text-primary border-2 border-primary hover:bg-primary hover:text-white transform hover:scale-105 transition-all duration-200 hover:shadow-lg rounded-full py-3"
                  >
                    Solicitar Demo
                  </Button>
                </form>
              </div>
            </Card>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
          <div class="max-w-3xl mx-auto">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
              Preguntas Frecuentes
            </h2>
            <div class="space-y-6">
              {faqs.map((faq) => (
                <Card className="border-2 border-primary/10">
                  <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                      {faq.question}
                    </h3>
                    <p class="text-gray-600">
                      {faq.answer}
                    </p>
                  </div>
                </Card>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- Office Information -->
      <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-12">
              Horarios de Atención
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <Card className="border-2 border-primary/10">
                <div class="p-6">
                  <div class="bg-primary/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                    <Clock className="h-8 w-8 text-primary" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-4">Soporte Técnico</h3>
                  <p class="text-gray-600">24/7</p>
                  <p class="text-gray-600">Tiempo de respuesta: 30 minutos</p>
                </div>
              </Card>
              <Card className="border-2 border-primary/10">
                <div class="p-6">
                  <div class="bg-primary/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                    <MessageSquare className="h-8 w-8 text-primary" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-4">Ventas y Consultas</h3>
                  <p class="text-gray-600">Lunes a Viernes</p>
                  <p class="text-gray-600">9:00 - 18:00 hs</p>
                </div>
              </Card>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="bg-primary py-12">
      <div class="container mx-auto px-4">
        <div class="text-center text-white/80">
          <p>© 2024 Yuppie. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
  }

  @media (max-width: 640px) {
    .prose {
      font-size: 1rem;
    }
    
    .prose h2 {
      font-size: 1.5rem;
    }
  }
</style>