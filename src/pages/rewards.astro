---
// src/pages/rewards.astro
import Layout from '../layouts/Layout.astro';
import { UserAuthProvider } from '../lib/UserAuthContext';
import { RewardsList } from '../components/points/RewardsList';
---

<Layout title="Mis Recompensas - Yuppie">
  <div class="min-h-screen pt-20 pb-12">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center mb-8">Recompensas</h1>
      
      <div class="max-w-5xl mx-auto">
        <div class="mb-8">
          <p class="text-center text-white/80 max-w-2xl mx-auto">
            Canjea tus puntos acumulados por descuentos y beneficios exclusivos en tus restaurantes favoritos.
          </p>
        </div>
        
        <UserAuthProvider client:load>
          <RewardsList client:load />
        </UserAuthProvider>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Estilos adicionales si son necesarios */
</style>