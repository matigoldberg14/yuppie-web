<script>
  // Tipos para el script
  interface ScrollOptions {
    behavior: ScrollBehavior;
    block?: ScrollLogicalPosition;
    inline?: ScrollLogicalPosition;
  }

  interface AOSOptions {
    duration?: number;
    once?: boolean;
    offset?: number;
  }

  // Importar AOS con type declaration
  import AOS from 'aos';
  import 'aos/dist/aos.css';

  document.addEventListener('astro:page-load', () => {
    // Inicializar AOS con tipos
    const aosOptions: AOSOptions = {
      duration: 1000,
      once: true,
      offset: 100
    };
    
    AOS.init(aosOptions);

    // Header scroll effect con comprobación de tipo
    const header = document.getElementById('header');
    const handleScroll = (): void => {
      if (!header) return;
      
      if (window.scrollY > 50) {
        header.classList.add('bg-black/50', 'backdrop-blur-lg');
      } else {
        header.classList.remove('bg-black/50', 'backdrop-blur-lg');
      }
    };

    window.addEventListener('scroll', handleScroll);

    // Mobile menu con tipos mejorados
    const mobileMenu = document.getElementById('mobile-menu');
    const openMenuBtn = document.getElementById('open-menu');
    const closeMenuBtn = document.getElementById('close-menu');

    if (!mobileMenu || !openMenuBtn || !closeMenuBtn) return;

    const toggleMenu = (show: boolean): void => {
      if (show) {
        mobileMenu.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      } else {
        mobileMenu.classList.add('hidden');
        document.body.style.overflow = '';
      }
    };

    openMenuBtn.addEventListener('click', () => toggleMenu(true));
    closeMenuBtn.addEventListener('click', () => toggleMenu(false));

    // Cerrar menú al hacer click en los enlaces
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => toggleMenu(false));
    });

    // Scroll to sections con tipos mejorados
    const scrollToSection = (id: string): void => {
      const element = document.getElementById(id);
      if (element) {
        const scrollOptions: ScrollOptions = {
          behavior: 'smooth',
          block: 'start'
        };
        element.scrollIntoView(scrollOptions);
      }
    };

    // Event listeners para los links de navegación
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        if (href && href.startsWith('#')) {
          const id = href.slice(1);
          scrollToSection(id);
        }
      });
    });

    // Cleanup function
    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  });
</script>

