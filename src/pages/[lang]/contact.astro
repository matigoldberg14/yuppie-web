---
import SharedLayout from '../../layouts/SharedLayout.astro';
import { Card } from '../../components/ui/card';
import { Mail, Clock, MessageSquare } from 'lucide-react';
import { ContactForm } from '../../components/common/ContactForm';
import { getLangFromUrl, useTranslations } from '../../i18n/config';
import type { SupportedLang } from '@/i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const contactMethods = [
  {
    icon: Mail,
    title: t('contact.methods.email.title'),
    description: t('contact.methods.email.description'),
    value: t('contact.methods.email.value'),
    link: "mailto:info@yuppiecx.com.ar"
  },
  {
    icon: MessageSquare,
    title: t('contact.methods.sales.title'),
    description: t('contact.methods.sales.description'),
    value: t('contact.methods.sales.value'),
  },
  {
    icon: MessageSquare,
    title: t('contact.methods.support.title'),
    description: t('contact.methods.support.description'),
    value: t('contact.methods.support.value'),
    link: "mailto:soporte@yuppiecx.com.ar"
  }
];

const faqs = [
  {
    question: t('contact.faq.questions.trial.question'),
    answer: t('contact.faq.questions.trial.answer')
  },
  {
    question: t('contact.faq.questions.installation.question'),
    answer: t('contact.faq.questions.installation.answer')
  },
  {
    question: t('contact.faq.questions.cancellation.question'),
    answer: t('contact.faq.questions.cancellation.answer')
  }
];
---

<SharedLayout title="Contacto | Yuppie">
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            {t('contact.title')}
          </h1>
          <p class="text-xl text-white/80">
            {t('contact.subtitle')}
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Methods Grid -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          {contactMethods.map(({ icon: Icon, title, description, value, link }) => (
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10 hover:border-white/20 transition-colors">
              <a href={link} class="p-6 flex flex-col items-center text-center">
                <div class="bg-white/10 p-4 rounded-full mb-4">
                  <Icon className="h-6 w-6 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
                <p class="text-white/60 mb-4">{description}</p>
                <p class="text-white font-medium">{value}</p>
              </a>
            </Card>
          ))}
        </div>

        <!-- Contact Form -->
        <div class="max-w-2xl mx-auto">
          <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
            <div class="p-8">
              <h2 class="text-2xl font-bold text-center text-white mb-8">
                {t('contact.requestDemo')}
              </h2>
              <ContactForm client:load lang={lang} />
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-white mb-12">
            {t('contact.faq.title')}
          </h2>
          <div class="space-y-6">
            {faqs.map((faq) => (
              <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-white mb-2">
                    {faq.question}
                  </h3>
                  <p class="text-white/80">
                    {faq.answer}
                  </p>
                </div>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Office Information -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-white mb-12">
            {t('contact.officeHours.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
              <div class="p-6">
                <div class="bg-white/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                  <Clock className="h-8 w-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-4">{t('contact.officeHours.technicalSupport.title')}</h3>
                <p class="text-white/80">{t('contact.officeHours.technicalSupport.hours')}</p>
                <p class="text-white/80">{t('contact.officeHours.technicalSupport.responseTime')}</p>
              </div>
            </Card>
            <Card className="bg-black/40 backdrop-blur-xl border border-white/10">
              <div class="p-6">
                <div class="bg-white/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                  <MessageSquare className="h-8 w-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-white mb-4">{t('contact.officeHours.sales.title')}</h3>
                <p class="text-white/80">{t('contact.officeHours.sales.hours')}</p>
                <p class="text-white/80">{t('contact.officeHours.sales.schedule')}</p>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>
  </div>
</SharedLayout>

<style>
  /* Input and select autofill styles */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    -webkit-text-fill-color: white;
    -webkit-box-shadow: 0 0 0px 1000px rgba(255, 255, 255, 0.05) inset;
    transition: background-color 5000s ease-in-out 0s;
  }

  /* Custom scrollbar for textareas */
  textarea::-webkit-scrollbar {
    width: 8px;
  }

  textarea::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  textarea::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  textarea::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>