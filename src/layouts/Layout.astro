---
import '../styles/globals.css';
import { ClientRouter } from 'astro:transitions';
import emailjs from '@emailjs/browser';
import Head from '@/components/common/Head.astro';
emailjs.init('3wONTqDb8Fwtqf1P0');

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Yuppie - Mejora la experiencia de tus clientes con feedback en tiempo real',
} = Astro.props;
---

<!doctype html>
<html lang='es' class='scroll-smooth'>
  <head>
    <Head title={title} description={description} />

    <ClientRouter />

    <style is:inline>
      .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
      }

      .card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
    </style>
  </H>
  <body class="min-h-screen bg-gradient font-['Poppins',sans-serif] text-white">
    <slot />
  </body>
</html>
